<VirtualHost *:80>
    DocumentRoot {{ wordpress_documentroot }}/wordpress
    <Directory {{ wordpress_documentroot }}/wordpress>
        Options FollowSymLinks
        AllowOverride Limit Options FileInfo
        DirectoryIndex index.php
        Require all granted
    </Directory>
    <Directory {{ wordpress_documentroot }}/wordpress/wp-content>
        Options FollowSymLinks
        Require all granted
    </Directory>
</VirtualHost>
